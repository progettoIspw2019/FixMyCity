<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox alignment="TOP_CENTER" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ispw.fixmycity.logic.view.javafx.RejectControllerFX">
   <children>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Rejecting Job">
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin>
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Text>
      <TextArea fx:id="rejectDescription" prefHeight="137.0" prefWidth="297.0" promptText="Reason (mandatory)">
         <VBox.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="19.0" />
         </VBox.margin>
      </TextArea>
      <HBox alignment="CENTER">
         <children>
            <JFXButton onAction="#cancel" prefHeight="30.0" prefWidth="100.0" style="-fx-background-color: #FF4949;;" text="Cancel" textFill="WHITE">
               <HBox.margin>
                  <Insets right="20.0" />
               </HBox.margin>
            </JFXButton>
            <JFXButton onAction="#submit" prefHeight="30.0" prefWidth="100.0" style="-fx-background-color: #5fe214;;" text="Submit" textFill="WHITE">
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin>
            </JFXButton>
         </children>
         <VBox.margin>
            <Insets bottom="30.0" left="20.0" right="20.0" />
         </VBox.margin>
      </HBox>
   </children>
</VBox>
