<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextArea?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ispw.fixmycity.logic.view.javafx.RejectControllerFX">
   <children>
      <JFXButton onAction="#cancel" prefHeight="31.0" prefWidth="86.0" style="-fx-background-color: #FF4949;;" text="Cancel" textFill="WHITE">
         <VBox.margin>
            <Insets bottom="20.0" top="10.0" />
         </VBox.margin>
      </JFXButton>
      <JFXTextArea fx:id="rejectDescription" promptText="Reason (necessary)">
         <VBox.margin>
            <Insets left="20.0" right="20.0" />
         </VBox.margin>
      </JFXTextArea>
      <JFXButton onAction="#submit" prefHeight="40.0" prefWidth="130.0" style="-fx-background-color: #5fe214;;" text="Submit" textFill="WHITE">
         <VBox.margin>
            <Insets bottom="40.0" top="20.0" />
         </VBox.margin>
      </JFXButton>
   </children>
</VBox>
